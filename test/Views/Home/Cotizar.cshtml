@using test.Models
@model Monedas
@{
    ViewBag.Title = "Cotizar";
    Layout = "~/Views/Shared/_temp.cshtml";
}
<head>
    <style>
        nav#mainNav {
    background-color: #000;
   }
    </style>
</head>
<nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
    <div class="container">
        <a class="navbar-brand js-scroll-trigger" href="@Url.Action("Index","Home")">Home</a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            Menu
            <i class="fa fa-bars"></i>
        </button>

    </div>
</nav>
<!-- Services -->
<section id="services">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase">Services</h2>
                <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
            </div>
        </div>
        <div class="row text-center">
            @using (Html.BeginForm("Cotizar", "Home", FormMethod.Post))
            {
                <div class="col-md-4">
                    @Html.TextBoxFor(x => x.cantidad, new { @class = "texto", placeholder = "Ingrese monto" })


                    @Html.DropDownListFor(x => x.monedaaconvertir, new SelectList(ViewBag.lista))

                </div>
                <div class="col-md-4">
                    @Html.DropDownListFor(x => x.monedaconvertida, new SelectList(ViewBag.lista))
                    @ViewBag.resultado
                </div>
                <div class="col-md-4">
                    <button type="submit">
                        Convertir
                    </button>
                </div>
            }
        </div>
    </div>
</section>



